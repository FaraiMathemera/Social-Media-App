<%# Header %>
<%- include("./partials/banner"); -%>
<%- include("./partials/nav"); -%>

<%# content %>
<div class = 'row'>
  <div class="col-12">
  <%- include ("./partials/messages"); -%>
    <form class="form-horizontal" action="/users/profile/edit" method="POST">
      <div class="form-group" style="display:none">
        <label class="control-label col-sm-2" for="_id">ID</label>
        <div class="col-sm-10">
        <input
          type="_id"
          id="_id"
          name="_id"
          class="form-control"
          value="<%= _id %>"
        />
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-12">
        <label class="control-label col-sm-2" for="imageProfile">Profile Picture</label>
        </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="col-sm-10">
            <input
              type="imageProfile"
              id="imageProfile"
              name="imageProfile"
              class="form-control"
              value="<%= imageProfile %>"
            />
            </div>
        </div>
        </div>
      </div>

      <%# Name %>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="name">Name: </label>
          </div>
          <div class="col-8">
            <div class="col-sm-10">
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              value="<%= name %>"
            />
            </div>
          </div>
        </div>
      </div>

      <%# Surname %>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="surname">Surname: </label>
          </div>
          <div class="col-8">
            <div class="col-sm-10">
            <input
              type="surname"
              id="surname"
              name="surname"
              class="form-control"
              value="<%= surname %>"
            />
            </div>
          </div>
        </div>
      </div>

      <%# Email %>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="age">Email: </label>
          </div>
          <div class="col-8">
            <div class="col-sm-10">
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              value="<%= email %>"
            />
            </div>
          </div>
        </div>
      </div>

      <%# Age %>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="age">Age: </label>
          </div>
          <div class="col-8">
            <div class="col-sm-10">
            <input
              type="age"
              id="age"
              name="age"
              class="form-control"
              value="<%= age %>"
            />
            </div>
          </div>
        </div>
        </div>

      <%# form footer %>
      <div class="row">
        <div class="col">
          <button type="submit" class="btn btn-primary">
            Save
          </button>
        </div>
        <div class="col-6">

        </div>
        <div class="col">
          <a href="/profile"><h3 class="mt-4">Cancel</h3></a>
        </div>
      </div>
    </form>
</div>
</div>
