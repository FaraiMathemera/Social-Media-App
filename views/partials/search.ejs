<div class = 'row'>
<div class="col-12">
<div class="form-group">
<div class="row">

<div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">

  <%# search bar %>
  <div class = 'row' style = "padding-bottom: 3%; padding-top: 3%;">
  <div class="col-12">
  <form class="form-inline mr-auto mb-4" action="/users/friends/results" method="POST">
    <div class="input-group col-md-11">
            <input class="form-control py-2 border-right-0 border" type="search" placeholder="search" id="search" name="search">
            <span class="input-group-append">
              <button class="btn btn-outline-secondary border-left-0 border" type="submit">
                    <i class="fa fa-search"></i>
              </button>
            </span>
        </div>
        <div class="form-group" style="display:none">
          <label class="control-label col-sm-2" for="_id">ID</label>
          <div class="col-sm-10">
          <input
            type="_id"
            id="_id"
            name="_id"
            class="form-control"
            value="<%= _id %>"
          />
          </div>
        </div>
  </form>
</div>
</div>

<%# search results %>
<% if ((searchResults.length)>0) {%>
  <h5 style="text-align: center;">Your search results.</h5>

  <% for(var i=0; i<(searchResults.length); i++) {%>
  <div class = 'row'>
    <div class="col-9">
      <div class = 'row'>
        <div class="col-4">
          
          <%# If no friends display heading %>
                  <% if((searchResults[i].searchResult.imageProfile).toString()==="") {%>
                  <i class="fa fa-user" style=" font-size: 4em;""></i>
                  <% } else {%>
                  <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" class="img-rounded" alt="Cinque Terre" style = "max-height: 35%;max-width: 35%;border-radius:12%;">
                  <% }%>
      </div>
      <div class="col-8">
    <label style="font-size: 1.2em;"><%= searchResults[i].searchResult.name%> <%= searchResults[i].searchResult.surname%></label>
    </div>
      </div>
    </div>
    <div class="col-3">
      <div class = 'row'>
        <div class="col-6">
      <label></label>
      </div>
      <div class="col-6">
      <%# If no friends display heading %>
      <label>Send request</label>
    </div>
      </div>
    </div>
  </div>

  <% } %>

<%}%>

</div>
</div>
</div>
</div>
</div>
