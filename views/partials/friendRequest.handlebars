
<div class = 'row'>
<div class="col-12">
<div class="form-group">
<div class="row" style="padding:0.5%;">


<div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">
{{#if user}}
  <div id="reload" class="dropdown" style=style="width:100%;">
                  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="width:100%; background-color: #4e4eff">Requests
                  <span class="caret"></span></button>
                    <ul class="dropdown-menu" style="width: 100%; height: 200px; overflow-y: scroll;">
                      {{#if user.request}}
                      {{#each newfriend}}
                      <li style="border-bottom: 1px solid lightgray">
                          <a href="#">
                        <div class = 'row' style="">
                          <div class="col-6">
                            <div>
                              <h4>{{this.username}}</h4>
                            </div>
                          </div>
                          <div class="col-6">
                            <div class = 'row' style="">
                              <div class="col-6">
                              <div style="width: 50%; display: inline;">
                                <input type="hidden" name="senderId" id="senderId" value="{{this.userId}}">
                                <input type="hidden" name="senderName" id="senderName" value="{{this.username}}">
                                <button type="submit" id="accept_friend" class="btn btn-primary" style="width: 8em; background-color:#d8d8ff;"><i class="fa fa-check" aria-hidden="true" style="color:#006200; font-size: 1.5em;"></i></button>
                              </div>
                            </div>
                            <div class="col-6">
                                  <div style="width: 50%;  display: inline;">
                                     <input type="hidden" name="user_Id" id="user_Id" value="{{this.userId}}">
                                    <button type="submit" id="cancel_friend" class="btn btn-primary" style="width: 8em; background-color:#d8d8ff;"><i class="fa fa-times" aria-hidden="true" style="color:#e60000; font-size: 1.5em;"></i></button>
                                  </div>
                                </div>
                              </div>
                            </div>

                          </div>


                        </a>
                      </li>
                      {{/each}}
                      {{else}}
                      <div>
                        <h4 style="text-align:center">No requests</h4>
                      </div>
                      {{/if}}
{{/if}}
                    </ul>
                  </div>
                </div>




</div>
</div>
</div>
</div>
</div>
