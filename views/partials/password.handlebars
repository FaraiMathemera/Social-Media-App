{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<div class = 'row' style = "padding-top: 3%;">

  <div class="col-12">
    <form class="form-horizontal" action="/users/password" method="POST">

      <div class="form-group" style="display:none">
        <label class="control-label col-sm-2" for="_id">ID</label>
        <div class="col-sm-10">
        <input
          type="_id"
          id="_id"
          name="_id"
          class="form-control"
          value="{{_id}}"
        />
        </div>
      </div>

      {{!Current Password}}
      <div class="form-group" style="display:none">
        <label class="control-label col-sm-2" for="password">Password</label>
        <div class="col-sm-10">
        <input
          type="text"
          id="password"
          name="password"
          class="form-control"
          value="{{ user.password }}"
        />
        </div>
      </div>

      {{!Current Password}}
      <div class="form-group">
        <div class="row">
          <div class="col-4">
        <label class="control-label col-sm-2" for="oldpassword">Password</label>
      </div>
        <div class="col-8">
          <div class="col-sm-10">
        <input
          type="password"
          id="oldpassword"
          name="oldpassword"
          class="form-control"
          placeholder="Current Password"

        />
      </div>
      </div>
    </div>
  </div>

  {{!New Password}}
  <div class="form-group">
    <div class="row">
      <div class="col-4">
    <label class="control-label col-sm-2" for="password">New Password</label>
  </div>
    <div class="col-8">
      <div class="col-sm-10">
    <input
      type="password"
      id="password1"
      name="password1"
      class="form-control"
      placeholder="New Password"

    />
  </div>
  </div>
</div>
</div>

  {{!Confirm Password}}
  <div class="form-group">
    <div class="row">
      <div class="col-4">
    <label class="control-label col-sm-2" for="password2">Confirm Password</label>
  </div>
    <div class="col-8">
      <div class="col-sm-10">
    <input
      type="password"
      id="password2"
      name="password2"
      class="form-control"
      placeholder="Confirm New Password"

    />
  </div>
  </div>
</div>
</div>


{{!Page Footer}}
<div class="row" style="background-color:#D6EAF8;">
  <div class="col">
    <a  type="submit" onclick="this.closest('form').submit();return false;"><h3 class="mt-4">Save</h3></a>
  </div>
  <div class="col-6">

  </div>
  <div class="col">
    <a href="/users/dashboard"><h3 class="mt-4">Cancel</h3></a>
  </div>
</div>

</form>
</div>
</div>
