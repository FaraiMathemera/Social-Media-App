{{#if paswd}}
        <div class="alert alert-danger">Incorrect password</div>
{{/if}}
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<div class = 'row' style = "padding-top: 3%;">
  <div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">
    <h1 class="text-center mb-3"><i class="fa fa-lock" style="color:#2727d8;padding:3%;"></i>  Enter password</h1>
  <div class="col-12">
    <form class="form-horizontal" action="/users/password" method="POST">

      <div class="form-group" style="display:none">
        <label class="control-label col-sm-2" for="_id">ID</label>
        <div class="col-sm-10">
        <input
          type="_id"
          id="_id"
          name="_id"
          class="form-control"
          value="{{user._id}}"
        />
        </div>
      </div>

      <div class="form-group" style="display:none">
        <label class="control-label col-sm-2" for="username">ID</label>
        <div class="col-sm-10">
        <input
          type="username"
          id="username"
          name="username"
          class="form-control"
          value="{{user.username}}"
        />
        </div>
      </div>


      {{!Current Password}}
      <div class="form-group">
        <div class="row">
          <div class="col-4">
        <label class="control-label col-sm-2" for="password">Password</label>
      </div>
        <div class="col-8">
          <div class="col-sm-10">
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Current Password"

        />
      </div>
      </div>
    </div>
  </div>


{{!Page Footer}}
<div class="row">
  <div class="col">
    <a  type="submit" onclick="this.closest('form').submit();return false;"><h3 class="mt-4">Change Password</h3></a>
  </div>
  <div class="col-6">

  </div>
  <div class="col">
    <a href="/users/dashboard" style="text-decoration: none;"><h3 class="mt-4">Cancel</h3></a>
  </div>
</div>

</form>
</div>
</div>
</div>
