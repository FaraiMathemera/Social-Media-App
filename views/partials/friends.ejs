<div class = 'row'>
<div class="col-12">
<div class="form-group">
<div class="row">

<div class="container" style="width:100%;height:5%;margin:0;padding: 3%;">
<%# Display heading if there any friends %>
  <% if ((friends.length)>0) {%>
    <h4 style="text-align: center;">Your friends.</h4>
  <%}%>

<%# display friends %>
      <% for(var i=0; i<(friends.length); i++) {%>
      <div class = 'row'>
        <div class="col-9">
          <div class = 'row'>
            <div class="col-4">
          <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" class="img-rounded" alt="Cinque Terre" style = "max-height: 40%;max-width: 40%;border-radius:12%;">
          </div>
          <div class="col-8">
        <label style="font-size: 1.2em;"><%= friends[i].name%> <%= friends[i].surname%></label>
        </div>
          </div>
        </div>
        <div class="col-3">
          <div class = 'row'>
            <div class="col-6">
          <label>Status</label>
          </div>
          <div class="col-6">
          <%# If no friends display heading %>
                  <% if((friends[i].status)=="true") {%>
                  <i class="fa fa-toggle-on" style="color:#006200; font-size: 2em;""></i>
                  <% } %>
                  <% if((friends[i].status)=="false") {%>
                  <i class="fa fa-toggle-off" style="color:#ffd8d8; font-size: 2em;""></i>
                  <% } %>

        </div>
          </div>
        </div>
      </div>

      <% } %>

<%# If no friends display heading %>
      <% if((friends.length)==0) {%>
      <h4 style="text-align: center;">You have no friends.</h4>
      <% } %>
</div>
</div>
</div>
</div>
</div>
