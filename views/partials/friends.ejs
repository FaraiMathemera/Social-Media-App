<div class = 'row'>
<div class="col-12">
<div class="form-group">
<div class="row">

<div class="container" style="width:100%;height:5%;margin:0;padding: 3%;">
<%# Display heading if there any friends %>
  <% if ((friends.length)>0) {%>
    <h4 style="text-align: center;">Your friends.</h4>
  <%}%>

<%# display friends %>
      <% for(var i=0; i<(friends.length); i++) {%>

      <h4 style="text-align: center;">Your friends.</h4>
      <div class = 'row'>
        <div class="col-6">
          <div class = 'row'>
            <div class="col-3">
          <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" class="img-rounded" alt="Cinque Terre" style = "max-height: 50%;max-width: 50%;border-radius:12%;">
          </div>
          <div class="col-9">
        <label style="font-size: 2em;"><%= friends[i].name%></label>
        </div>
          </div>
        </div>
        <div class="col-6">
          <div class = 'row'>
            <div class="col-6">
          <h3>Status</h3>
          </div>
          <div class="col-6">
        <h3>Online</h3>
        </div>
          </div>
        </div>
      </div>

      <% } %>

<%# If no friends display heading %>
      <% if((friends.length)==0) {%>
      <h4 style="text-align: center;">You have no friends.</h4>
      <% } %>
</div>
</div>
</div>
</div>
</div>
