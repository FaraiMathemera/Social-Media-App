<div class = 'row'>
<div class="col-12">
<div class="form-group">
<div class="row">

<div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">
<%# Display heading if there any friends %>
  <% if ((friends.length)>0) {%>
    <h5 style="text-align: center;">Your friends.</h5>
  <%}%>

<%# display friends %>
      <% for(var i=0; i<(friends.length); i++) {%>
      <div class = 'row'>
        <div class="col-9">
          <div class = 'row'>
            <div class="col-4">
              <%# If no friends display heading %>
                      <% if((friends[i].friend.imageProfile).toString()==="") {%>
                      <i class="fa fa-user" style=" font-size: 4em;""></i>
                      <% } else {%>
                      <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" class="img-rounded" alt="Cinque Terre" style = "max-height: 35%;max-width: 35%;border-radius:12%;">
                      <% }%>
          </div>
          <div class="col-8">
        <label style="font-size: 1.2em;"><%= friends[i].friend.name%> <%= friends[i].friend.surname%></label>
        </div>
          </div>
        </div>
        <div class="col-3">
          <div class = 'row'>
            <div class="col-6">
          <label></label>
          </div>
          <div class="col-6">
          <%# If no friends display heading %>
                  <% if((friends[i].friend.status).toString()==="true") {%>
                  <i class="fa fa-toggle-on" style="color:#006200; font-size: 2em;""></i>
                  <% } %>
                  <% if((friends[i].friend.status).toString()==="false") {%>
                  <i class="fa fa-toggle-off" style="color:#ffd8d8; font-size: 2em;""></i>
                  <% } %>

        </div>
          </div>
        </div>
      </div>

      <% } %>

<%# If no friends display heading %>
      <% if((friends.length)==0) {%>
      <h5 style="text-align: center;">You have no friends.</h5>
      <% } %>
</div>
</div>
</div>
</div>
</div>
