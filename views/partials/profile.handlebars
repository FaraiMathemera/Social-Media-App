<div class="row" style="padding-top:0.5%;">
<div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">
  <div class="col-12">
      {{!Profile Picture}}
      <div class="form-group">
        <div class="row">
          <div class="col-3">
          <img class="profilestyle" src="/upload/{{user.userImage}}" alt="{{user.userImage}}"width="75%" height="75%" >
        </div>
        </div>
      </div>
      {{!Userame}}
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="name">User name: </label>
          </div>
          <div class="col-8">
            <label class="control-label col-sm-2" for="name">{{user.username}}</label>
          </div>
        </div>
      </div>

      {{!Name}}
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="name">Name: </label>
          </div>
          <div class="col-8">
            <label class="control-label col-sm-2" for="name">{{user.name}}</label>
          </div>
        </div>
      </div>

      {{!Surname}}
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="surname">Surname: </label>
          </div>
          <div class="col-8">
            <label class="control-label col-sm-2" for="surname">{{user.surname}}</label>
          </div>
        </div>
      </div>

      {{!Email}}
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="age">Email: </label>
          </div>
          <div class="col-8">
            <label class="control-label col-sm-2" for="email">{{user.email}}</label>
          </div>
        </div>
      </div>

      {{!Age}}
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            <label class="control-label col-sm-2" for="age">Age: </label>
          </div>
          <div class="col-8">
            <label class="control-label col-sm-2" for="imageProfile">{{user.age}}</label>
          </div>
        </div>
      </div>

      {{!Page Footer}}
      <div class="row">
        <div class="col-12">
        <a href="/dashboard" style="text-decoration: none;"><h3 class="mt-4">Edit Profile</h3></a>
        </div>
      </div>
</div>
</div>
</div>
