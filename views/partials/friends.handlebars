<div class = 'row'>
<div class="col-12">
<div class="form-group">
<div class="row" style="padding-top:0.5%;">

{{!Search Button}}
<div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">
<a href="/search" class="btn btn-primary" style="width:100%; background-color: #4e4eff">Search friends</a>
</div>

</div>
</div>
</div>
</div>


<div class = 'row'>
<div class="col-12">
<div class="form-group">
<div class="row" style="padding-top:0.5%;">

{{!Friend Request}}
<div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">
<div class="dropdown" style="">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="width:100%; background-color: #4e4eff">Friend Requests</span></button>
                  <ul class="dropdown-menu" style="width: 300px; height: 400px; overflow-y: scroll; width:100%;">
                    {{#if user.request}}
                    {{#each newfriend}}
                    <li style="border-bottom: 1px solid lightgray" >
                      <a href="#">
                          <div>
                            <h4>{{username}}</h4>
                          </div>
                          <div>
                              <div style="width: 90%; display: inline;">
                                <input type="hidden" name="senderId" id="senderId" value="{{userId}}">
                                <input type="hidden" name="senderName" id="senderName" value="{{username}}">
                                <button type="submit" id="accept_friend" class="btn btn-primary" style="width: 8em">Accept Request</button>
                              </div>
                              <div style="width: 90%;  display: inline;">
                                 <input type="hidden" name="user_Id" id="user_Id" value="{{userId}}">
                                <button type="submit" id="cancel_friend" class="btn btn-primary" style="width: 8em">Cancel Request</button>
                              </div>
                          </div>
                      </a>
                    </li>
                    {{/each}}
                    {{else}}
                    <div>
                      <h4 style="text-align:center">No requests</h4>
                    </div>
                    {{/if}}
                  </ul>
</div>
</div>

</div>
</div>
</div>
</div>


<div class = 'row'>
<div class="col-12">
<div class="form-group">
<div class="row" style="padding-top:0.5%;">
{{!Friends List}}
<div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">
  	<h3 style="background-color: whitesmoke; padding: 10px; border-radius: 5px; border: 1px solid lightgray">Friends</h3>
  	{{#each user.friendsList}}
  	<p>
  		{{friendName}}
  	</p>
  	{{/each}}
</div>

</div>
</div>
</div>
</div>
