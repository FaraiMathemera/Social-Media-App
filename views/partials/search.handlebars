<div class="container" style="width:100%;height:5%;padding:3%;border:1px solid #b1b1b1;border-radius:2%;">

  {{!Search Bar}}
  <h2>Search Friends</h2>
  <div class = 'row' style = "padding-bottom: 3%; padding-top: 3%;">
  <div class="col-12">
  <form class="form-inline mr-auto mb-4" action="/search" method="POST">
    <div class="input-group col-md-11">
            <input class="form-control py-2 border-right-0 border" type="text" placeholder="username" id="search" name="searchfriend">
            <span class="input-group-append">
              <button class="btn btn-outline-secondary border-left-0 border" type="submit" value="Search">
                    <i class="fa fa-search"></i>
              </button>
            </span>
        </div>
        <div class="form-group" style="display:none">
          <label class="control-label col-sm-2" for="_id">ID</label>
          <div class="col-sm-10">
          <input
            type="_id"
            id="_id"
            name="_id"
            class="form-control"
            value="<%= _id %>"
          />
          </div>
        </div>
  </form>
</div>
</div>
  <hr>

  	{{#each result}}
    <div class="container" style="width:100%;height:3%;padding:0.5%;border:1px solid #b1b1b1;border-radius:2%;">
      <div class="row">
        <div class="col-3">
  		<img class="usercard-image" src="upload/{{this.userImage}}" width="50%" height="50%">
      </div>
      <div class="col-6">
  		<h4 class="usercard-name">{{this.name}} {{this.surname}}</h4>
  		<p class="usercard-username">{{this.username}}</p>
      </div>
      <div class="col-3">
  		<form action="" method="get" class="add_friend">
              <input type="hidden" name="receiverName" class="receiverName" value="{{this.username}}">
              <input type="hidden" name="sender-name" class="sender-name" value="{{user.username}}">
              <button type="submit" id="" onclick="addFriend('{{this.username}}')" class="btn add accept friend-add" style="background-color: #4e4eff;"><i class="fa fa-user" ></i> Add Friend</button>
      </form>
    </div>
    </div>
  	</div>
  	{{/each}}

</div>
